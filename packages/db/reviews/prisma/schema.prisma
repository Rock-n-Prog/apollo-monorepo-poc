datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
  output          = "../../../node_modules/.prisma/client"
}

model Review {
  id            String    @id @default(cuid())
  contentId     String
  title         String
  year          Int
  score         Float
  comments      String[]
}
